<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PackageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview3"
        android:layout_margin="5dp"
        android:padding="@dimen/dp_10"
        android:elevation="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/menu"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="14dp"
                android:src="@drawable/menu" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imgLocation"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:layout_toEndOf="@id/imgLocation"
                android:fontFamily="@font/alegreya_sans_sc_thin"
                android:text="@string/bengalore"
                android:textColor="@color/dark_grey" />

            <TextView
                android:id="@+id/city2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/imgLocation"
                android:text="@string/bengalore_karnataka"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/search"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="120dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toEndOf="@+id/city"
                android:src="@drawable/ic_search_bar" />

            <ImageView
                android:id="@+id/bell"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_toEndOf="@id/search"
                android:src="@drawable/ic_bell" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/cart"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/bell"
                android:src="@drawable/ic_cart" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_below="@id/cardview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="#ff2e2e"
        app:tabGravity="fill"
        app:tabIndicatorColor="#ff0000"
        android:focusableInTouchMode="true"
        app:tabMode="scrollable"
        app:tabTextColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_below="@id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>