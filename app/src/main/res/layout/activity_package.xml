<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PackageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview3"
        android:layout_margin="5dp"
        android:elevation="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/menu"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/user"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bengalore"
                android:fontFamily="@font/alegreya_sans_sc_thin"
                android:layout_toEndOf="@id/imgLocation"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginStart="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/city2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@id/imgLocation"
                android:text="@string/bengalore_karnataka"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toEndOf="@+id/city"
                android:src="@drawable/search"
                android:layout_marginStart="130dp"
                android:layout_marginTop="@dimen/dp_12"
                />

            <ImageView
                android:id="@+id/bell"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toEndOf="@id/search"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@drawable/ringing" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toEndOf="@+id/bell"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_7"
                android:src="@drawable/cart1"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_below="@id/cardview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="#ff2e2e"
        app:tabGravity="fill"
        app:tabIndicatorColor="#ff0000"
        android:focusableInTouchMode="true"
        app:tabMode="scrollable"
        app:tabTextColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_below="@id/cardview3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>