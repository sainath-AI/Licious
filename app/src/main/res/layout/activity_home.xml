<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    tools:openDrawer="start"
    tools:context=".activities.HomeActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="@dimen/dp_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/menu"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="14dp"/>

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/user"
                android:layout_marginStart="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bengalore"
                android:fontFamily="@font/alegreya_sans_sc_thin"
                android:layout_toEndOf="@id/imgLocation"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginStart="@dimen/dp_5"
                />

            <TextView
                android:id="@+id/city2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@id/imgLocation"
                android:text="@string/bengalore_karnataka"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/search"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toEndOf="@+id/city"
                android:src="@drawable/search"
                android:layout_marginStart="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_12"
                />

            <ImageView
                android:id="@+id/bell"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toEndOf="@id/search"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@drawable/ringing" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_toEndOf="@+id/bell"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_7"
                android:src="@drawable/cart1"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:id="@+id/horizontalScroll"
        android:background="#f5f5f5"
        android:scrollbarThumbHorizontal="@drawable/scroll_bar"
        android:layout_height="@dimen/dp_90">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/birthday"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                 android:layout_gravity="center_vertical"
                android:src="@drawable/birthday"
                />
            <ImageView
                android:id="@+id/bakrid"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/bakrid"
                android:layout_toEndOf="@id/birthday"
                />
            <ImageView
                android:id="@+id/fish"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fish"
                android:layout_toEndOf="@id/bakrid"

                />
            <ImageView
                android:id="@+id/chicken"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/chicken"
                android:layout_toEndOf="@id/fish"

                />
            <ImageView
                android:id="@+id/mutton"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/mutton"
                android:layout_toEndOf="@id/chicken"

                />
            <ImageView
                android:id="@+id/readytocook"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/redytocook"
                android:layout_toEndOf="@id/mutton"

                />
            <ImageView
                android:id="@+id/spreads"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/spreads"
                android:layout_toEndOf="@id/readytocook"

                />
            <ImageView
                android:id="@+id/eggs"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/eggs"
                android:layout_toEndOf="@id/spreads"

                />
            <ImageView
                android:id="@+id/kabab"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/kabab"
                android:layout_toEndOf="@id/eggs"

                />
            <ImageView
                android:id="@+id/prawn"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/prawn"
                android:layout_toEndOf="@id/kabab"

                />
            <ImageView
                android:id="@+id/coldcuts"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cold"
                android:layout_toEndOf="@id/prawn"

                />
            <ImageView
                android:id="@+id/combos"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/combos"
                android:layout_toEndOf="@id/coldcuts"

                />
            <ImageView
                android:id="@+id/saver"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:src="@drawable/saver"
                android:layout_toEndOf="@id/combos"

                />
        </RelativeLayout>
        
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontalScroll"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="1000" />

            <ImageView
                android:id="@+id/metopiaJoin"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:elevation="@dimen/dp_30"
                android:layout_below="@id/image_slider"
                android:src="@drawable/join"
                android:layout_margin="5dp"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_180"
                android:layout_height="110dp"
                android:id="@+id/cardView1"
                app:cardElevation="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_below="@id/metopiaJoin">

                    <ImageView
                        android:id="@+id/licious1"
                        android:layout_width="@dimen/dp_180"
                        android:layout_height="@dimen/dp_100"
                        android:src="@drawable/licious1"
                        android:padding="@dimen/dp_10"
                        />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_180"
                android:layout_height="110dp"
                android:id="@+id/cardView2"
                app:cardElevation="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_toEndOf="@+id/cardView1"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_below="@id/metopiaJoin">

            <ImageView
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_100"
                android:src="@drawable/referfriend"
                android:padding="@dimen/dp_10"
                />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/best_sellers"
                android:layout_below="@id/cardView2"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="5dp"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbHorizontal="@drawable/scroll_bar"
                android:layout_below="@id/tvText">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/ImgChicken"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingStart="-250dp"
                        android:paddingEnd="-250dp"
                        android:src="@drawable/chickenpiece" />
                    <ImageView
                        android:id="@+id/Imgmutton1"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:src="@drawable/rolls"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:layout_toEndOf="@id/ImgChicken"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                    <ImageView
                        android:id="@+id/ImgPrawn"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:src="@drawable/meat"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:layout_toEndOf="@id/Imgmutton1"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                    <ImageView
                        android:id="@+id/Imgeggs"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:src="@drawable/prawnfish"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:layout_toEndOf="@id/ImgPrawn"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                    <ImageView
                        android:id="@+id/ImgFish"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:src="@drawable/chickenpiece"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:layout_toEndOf="@id/Imgeggs"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                    <ImageView
                        android:id="@+id/ImgAfgani"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:src="@drawable/prawnfish"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:layout_toEndOf="@id/ImgFish"
                        android:layout_marginStart="-15dp"
                        android:layout_marginTop="@dimen/dp_10"
                        />

                    <ImageView
                        android:id="@+id/ImgGoat"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toEndOf="@id/ImgAfgani"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:src="@drawable/rolls" />

                    <ImageView
                        android:id="@+id/ImgKeema"
                        android:layout_width="240dp"
                        android:layout_height="300dp"
                        android:src="@drawable/meat"
                        android:paddingStart="-195dp"
                        android:paddingEnd="-195dp"
                        android:layout_toEndOf="@id/ImgGoat"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                </RelativeLayout>
            </HorizontalScrollView>
        </RelativeLayout>

        
    </ScrollView>
</RelativeLayout >