<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cart.CheckFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Cart Details"
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_25"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview11"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        app:cardElevation="@dimen/dp_20">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:id="@+id/imagedata"
                android:layout_margin="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imagedata"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/red"
                android:id="@+id/titleData"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleData"
                android:layout_toEndOf="@+id/imagedata"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/red"
                android:id="@+id/PriceData"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PriceData"
                android:layout_toEndOf="@+id/imagedata"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/red"
                android:id="@+id/WeightData"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview11"
        app:cardElevation="@dimen/dp_20"
        android:layout_marginTop="330dp"
        android:id="@+id/card2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total="
                android:id="@+id/tvtotal"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/sp_20"
                />
            <TextView
                android:id="@+id/priceData2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvtotal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_8"
                android:textSize="@dimen/sp_18"


                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="Proceed"
                android:id="@+id/proceed"
                android:textColor="@color/white"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:layout_alignParentEnd="true"


                />




        </RelativeLayout>




    </androidx.cardview.widget.CardView>



</RelativeLayout>